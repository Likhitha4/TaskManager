<h3>Add Task </h3>
<%= form_for @comment do |f| %>
<% if @comment.errors.any? %>
<h4>These errors prohibited the form being saved: </h4>
<ul style="color:red;">
<% @comment.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
 </ul>
 <% end %>


<label>Task</label><br/>
<%= f.collection_select :task_id, Task.all, :id, :title, prompt: "select Task" %><br/>


<label>Description</label><br/>
<%= f.text_area :description %><br/>

<label>attachment</label><br/>
<%= f.text_field :attachment %><br/>



<%= f.submit %>
<% end %>

