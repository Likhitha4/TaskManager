<h3>Add Team </h3>


<%= form_for @team do |f| %>
<% if @team.errors.any? %>
<h4>These errors prohibited the form being saved: </h4>
<ul style="color:red;">
<% @team.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
 </ul>
 <% end %>

<div class="form-group">
<label>Name</label><br/>
<%= f.text_field :name, class: "form-control" %>
</div>
<br/>

<div class= "form-group">
<label>Size</label><br/>
<%= f.text_field :size, class: "form-control" %><br/>
</div>

<div class= "form-group">
<label>Team_lead</label><br/>
<%= f.text_field :team_lead, class: "form-control" %><br/>
</div>


<label>Select Members</label><br/>
<%= f.collection_check_boxes :user_ids, User.all, :id, :email do |b| %>
	<%= b.check_box %> <%= b.label %> <br/>
<% end %>

<%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>

